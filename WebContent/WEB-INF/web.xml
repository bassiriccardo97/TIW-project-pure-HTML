<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>TIW-project</display-name>
	<context-param>
    	<param-name>dbUrl</param-name>
    	<param-value>jdbc:mysql://localhost:3306/dbtest</param-value>
  	</context-param>
  	<context-param>
    	<param-name>dbUser</param-name>
    	<param-value>root</param-value>
  	</context-param>
  	<context-param>
    	<param-name>dbDriver</param-name>
    	<param-value>com.mysql.cj.jdbc.Driver</param-value>
  	</context-param>
  	<context-param>
  		<param-name>sessionTimeout</param-name>
  		<param-value>3600</param-value>
  	</context-param>
	<filter> 
		<filter-name>LoginChecker</filter-name>
		<filter-class>it.polimi.tiw.project.filters.LoginChecker</filter-class> 
	</filter>
	<filter> 
      <filter-name>NoCacher</filter-name>
      <filter-class>it.polimi.tiw.project.filters.NoCacher</filter-class> 
 	</filter> 
  	<filter-mapping> 
    	<filter-name>NoCacher</filter-name> 
    	<url-pattern>/IndexLoader</url-pattern> 
 	</filter-mapping>
  	<filter-mapping> 
    	<filter-name>LoginChecker</filter-name> 
    	<url-pattern>/AddImage</url-pattern> 
    	<url-pattern>/CreateCategory</url-pattern> 
    	<url-pattern>/DeleteCategory</url-pattern> 
    	<url-pattern>/DownloadImage</url-pattern> 
    	<url-pattern>/GetCategories</url-pattern> 
    	<url-pattern>/ImagesList</url-pattern> 
    	<url-pattern>/MoveCategoryPerform</url-pattern> 
    	<url-pattern>/MoveCategorySelect</url-pattern>
    	<url-pattern>/Logout</url-pattern>
    	<url-pattern>/RenameCategory</url-pattern>
    	<url-pattern>/RenameCategoryPerform</url-pattern> 
    	<url-pattern>/home.html</url-pattern> 
    	<url-pattern>/imagesList.html</url-pattern> 
    	<url-pattern>/moveCategory.html</url-pattern> 
    	<url-pattern>/rename.html</url-pattern> 
 	</filter-mapping> 
  	<welcome-file-list>
    	<welcome-file>IndexLoader</welcome-file>
	</welcome-file-list>
</web-app>